<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wonk.glide">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/space"
        android:label="Space"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.wonk.glide.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="com.example.wonk.glide.SpaceGalleryActivity" />
        <activity android:name="com.example.wonk.glide.GifsActivity" />
        <activity android:name="com.example.wonk.glide.SpacePhotoActivity" />
    </application>

</manifest>